<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.internetthings.sailfish.ftue.NotificationAccessActivity"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Access"
        android:id="@+id/btnDoThis"
        android:onClick="onClickNext"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Check the box next to\n\n\nClick the back button"
        android:id="@+id/Instructions"
        android:paddingLeft="15dp"
        android:layout_above="@+id/btnDoThis"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" 1 "
        android:id="@+id/num1"
        android:textColor="#ff83e30c"
        android:background="#ff040404"
        android:layout_alignTop="@+id/Instructions"
        android:layout_toStartOf="@+id/Instructions" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" 2 "
        android:id="@+id/num2"
        android:textColor="#ff83e30c"
        android:background="#ff040404"
        android:layout_alignBottom="@+id/Instructions"
        android:layout_toStartOf="@+id/Instructions" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/notifmockup"
        android:paddingBottom="10dp"
        android:layout_above="@+id/Instructions"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notice"
        android:id="@+id/textView"
        android:textStyle="bold|italic"
        android:layout_below="@+id/num1"
        android:layout_alignStart="@+id/Instructions"
        android:paddingLeft="15dp" />

</RelativeLayout>
