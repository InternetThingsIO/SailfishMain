<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.internetthings.sailfish.ftue.NotificationAccessActivity"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Access Screen"
        android:textColor="#FFFFFF"
        android:id="@+id/btnDoThis"
        android:onClick="onClickNext"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:clickable="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/btnDoThis"
        android:layout_alignEnd="@+id/imageView"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" 1 "
            android:id="@+id/num1"
            android:textColor="#fffffffb"
            android:background="@drawable/rounded_corners"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_alignTop="@+id/Instructions" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" 2 "
            android:id="@+id/num2"
            android:textColor="#fff8fdff"
            android:background="@drawable/rounded_corners"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/Instructions" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Check the box next to Notice\n\nTap the back button "
            android:id="@+id/Instructions"
            android:paddingLeft="10dp"
            android:layout_centerHorizontal="true"
            android:singleLine="false"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/num2" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/notifmockup"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notice"
        android:id="@+id/textView10"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="needs your phone&apos;s approval for notification access"
        android:id="@+id/textView11"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="It will look something like this"
        android:id="@+id/textView"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
