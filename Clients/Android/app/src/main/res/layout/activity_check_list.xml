<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.internetthings.sailfish.ftue.CheckListActivity"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Done"
        android:id="@+id/btnFinished"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickFinished"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Test Message"
        android:id="@+id/testMSGButton"
        android:onClick="sentTestMSG"
        android:layout_above="@+id/btnFinished"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notice"
        android:id="@+id/textView12"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="setup is complete."
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_alignStart="@+id/btnFinished"
            android:layout_below="@+id/textView13">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected Email"
                android:id="@+id/emailSelected"
                android:checked="false"
                android:clickable="false"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/btnFinished" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configured Chrome"
                android:id="@+id/configuredChrome"
                android:checked="false"
                android:clickable="false"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:layout_below="@+id/emailSelected"
                android:layout_alignLeft="@+id/btnFinished" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Has Notification Access"
                android:id="@+id/NAgranted"
                android:checked="false"
                android:clickable="false"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:layout_below="@+id/configuredChrome"
                android:layout_alignLeft="@+id/btnFinished" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
