<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.internetthings.sailfish.ftue.ConfigureChromeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/h1_bg"
        android:visibility="visible"
        android:clickable="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:id="@+id/relativeLayout4"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Configure Chrome"
            android:id="@+id/configureTxt"
            android:layout_centerHorizontal="true"
            android:textSize="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:textColor="@color/h1_text"
            android:typeface="sans"
            android:paddingLeft="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chromeicon"
            android:src="@drawable/chrome"
            android:layout_alignTop="@+id/configureTxt"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/configureTxt"
            android:layout_toStartOf="@+id/configureTxt"
            android:paddingRight="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/h2_bg"
        android:visibility="visible"
        android:clickable="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:gravity="center"
        android:id="@+id/relativeLayout5"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignEnd="@+id/relativeLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="We need to configure your Chrome browser to receive notifications"
            android:id="@+id/chromeINSTRTxt"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/h2_text" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We&apos;ve sent instructions"
        android:id="@+id/textView4"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email Not found"
        android:id="@+id/FTUEEmail"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have configured chrome"
        android:textColor="#FFFFFF"
        android:id="@+id/btnCompletedStep"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCompletedButton"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/button_green_roundedcorners"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gmailicon"
        android:src="@drawable/googlemail"
        android:layout_below="@+id/FTUEEmail"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
