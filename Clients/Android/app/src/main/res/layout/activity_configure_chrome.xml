<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.internetthings.sailfish.ftue.ConfigureChromeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Configure\nChrome"
        android:id="@+id/txtTitle"
        android:textSize="32dp"
        android:layout_alignTop="@+id/chromeicon"
        android:layout_toEndOf="@+id/chromeicon"
        android:textStyle="bold"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Next we need to configure your Chrome browser to receive notifications"
        android:id="@+id/textView3"
        android:gravity="center_horizontal"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentEnd="true"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We&apos;ve sent instructions"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email Not found"
        android:id="@+id/FTUEEmail"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I have configured chrome"
        android:id="@+id/btnCompletedStep"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCompletedButton"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gmailicon"
        android:src="@drawable/googlemail"
        android:layout_below="@+id/FTUEEmail"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chromeicon"
        android:src="@drawable/chrome"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/gmailicon" />


</RelativeLayout>
