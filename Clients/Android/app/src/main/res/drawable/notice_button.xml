<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/Red"
                android:width="3dp"/>
            <corners
                android:radius="0dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>
            <solid android:color="@color/btn_green_pressed"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="0dp" />

            <stroke android:color="@color/Red"
                android:width="3dp"/>

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="@color/btn_green"/>
        </shape>
    </item>
</selector>